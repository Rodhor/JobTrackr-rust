{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "JobTrackr",
  "version": "0.2.3",
  "identifier": "com.rodhor.jobtrackr",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "JobTrackr",
        "fullscreen": false,
        "maximized": true,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "msi", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/32x32.ico",
      "icons/32x32.icns",
      "icons/128x128.png",
      "icons/128x128.ico",
      "icons/128x128.icns",
      "icons/256x256.png",
      "icons/256x256.ico",
      "icons/256x256.icns"
    ]
  }
}
